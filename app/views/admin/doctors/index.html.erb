<% provide :title, t("doctor") %>
<div class="card">
  <div class="card-header">
    <h1 class="card-title color-list">
      <%= t "doctor_list" %>
    </h1>
    <%= search_form_for @q, url: admin_doctors_path, class: "form-inline" do |f| %>
        <div class="input-group input-group-sm div-top-search">
          <%= f.search_field :full_name_or_email_or_phone_or_address_or_user_name_cont, class: "form-control" %>
        <div class="input-group-append">
          <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
        </div>
      </div>
    <% end %>
    <select class="custom-select" data-sortorder="">
      <option value="index"><%= t "a_z" %></option>
    </select>
    <%= link_to t("create_account"), new_admin_doctor_path , class: "create_account btn btn-primary" %>
  </div>
  <div class="card-body">
    <div class="row justify-content-md-center">
      <%= render "doctors_list" %>
    </div>
    <%= paginate @doctors %>
  </div>
</div>
