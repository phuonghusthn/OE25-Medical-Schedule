<% provide :title, t("admins") %>
<div class="card">
  <div class="card-header">
    <h1 class="card-title color-list">
      <%= t "admin_list" %>
    </h1>
    <%= search_form_for @q, url: admin_admins_path, class: "form-inline" do |f| %>
        <div class="input-group input-group-sm div-top-search">
          <%= f.search_field :full_name_or_email_or_phone_cont, class: "form-control" %>
        <div class="input-group-append">
          <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
        </div>
      </div>
    <% end %>
    <%= link_to t("create_account"), new_admin_admin_path , class: "btn btn-primary create_account" %>
  </div>
  <div class="card-body">
    <div class="row justify-content-md-center">
      <%= render "admins_list" %>
    </div>
    <%= paginate @admins %>
  </div>
</div>
