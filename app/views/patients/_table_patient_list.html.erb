<% if @patients.present? %>
  <table id="example2" class="table table-bordered table-hover text-center">
    <thead>
      <tr class="background-color">
        <th><%= t "stt" %></th>
        <th><%= t "patient_name" %></th>
        <th><%= t "mail" %></th>
        <th><%= t "phone" %></th>
        <th><%= t "address" %></th>
        <th><%= t "appointment_list_with_doctor" %></th>
        <th><%= t "medical_record" %></th>
      </tr>
    </thead>

    <tbody>
      <%= render @patients %>
    </tbody>
  </table>
<% else %>
  <h3 class="red_color"><%= t "no_result" %></h3>
<% end %>
